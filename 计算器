#include<iostream>
#include<cmath>
using namespace std;
int main()	
{
	double a,b;
	char op;
	double c;
	
	cout<<"Please input expression:";
	cin>>a>>op>>b;
	switch(op){
		case'+':c=a+b;
		cout<<a<<op<<b<<"="<<c<<endl;
		break;
		case'-': c=a-b ;
		cout<<a<<op<<b<<"="<<c<<endl;
		break;
		case'*':c=a*b;
		cout<<a<<op<<b<<"="<<c<<endl;
		break;
		case'/':c=a/b;
		cout<<a<<op<<b<<"="<<c<<endl;
		break;
		return 0; 
	}
}
